<div class="container">
  <div class="row user-log text-center">
    <div class="col-lg-4 col-md-offset-3 user-info-form">
      <div class="form-wrap">
        <h2>Sign in</h2>
        <%=bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-group"})  do |f| %>
          <%= f.email_field :email, autofocus: true %>
          <%= f.password_field :password, autocomplete: "off" %>
          <% if devise_mapping.rememberable? -%>
           <%= f.check_box :remember_me %>
          <% end -%>
          <div class="sign-in-link"><%= f.submit "Sign in", :class => "btn btn-lg btn-success" %></div>
          <%= render "devise/shared/links" %>
        <% end %>

      </div>
    </div>
  </div>
</div>
