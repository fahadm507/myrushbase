<div class="container">
  <div class="row user-log text-center">
    <div class="col-lg-4 col-md-offset-3 user-info-form">
      <div class="form-wrap">
        <h2>Sign in</h2>

        <%=form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-group"})  do |f| %>
          <div><%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true %></div>

          <div><%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off" %></div>

          <% if devise_mapping.rememberable? -%>
            <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
          <% end -%>
          <div class="sign-in-link"><%= f.submit "Sign in", :class => "btn btn-lg btn-success" %></div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
