<div class="row">
  <div class="posts-area">
    <div class="post-details">
      <% @questions.order(created_at: :desc).each do |question| %>
      <div class="poster">
        <div class="image-for-poster pull-left"><%= image_tag quesion.user.avatar.url(:thumbnail), class: "img-circle post-avatar"%></div>
        <div class="post-image-n-time">
          <div class="user-name"><a> <%= question.user.first_name %> <%= post.user.last_name %></a></div>
          <div class="time">posted on <%=question.created_at.strftime("%B %d, %Y, %I:%M %p ") %></div>
        </div>
      </div>
        <div class="post-body"><%= question.body %>
          <ul class="count-comments-n-likes">
            <li class="likes"><%= (question.answers.count) || question.answers.count = 0 %> Comments</li>
          </ul>
          <div class="comments-form">
            <%= bootstrap_form_for [question, @answer], html: {class: 'comment-form'} do |f| %>
              <%= f.text_area :description, hide_label: true, size: "20x2",required: true %>
              <div class="comment-like-btns">
                <div class="pull-left comment"><%= f.submit "Comment" %></div>
            <%end%>
                <% if Like.has_liked?(current_user.id, question.id) %>
                  <div class="pull-left liked"><%= button_to 'liked', question_answer_path(post, Like.where(user: current_user, post_id: post.id).first), method: :delete %></div>
                <% else %>
                  <div class="pull-left like"><%= button_to [post, @like], html:{class: "btn btn-lg"} do %>
                  Like
                  </div><%end%>
                <% end %>
              </div>
          </div><br><br>
          <div class="comments-details">
            <% question.answers.each do |comment| %>
            <ul>
              <li><%=comment.description%></li>
            </ul>
            <%end%>
          </div>
        </div>
      <%end%>
    </div>
  </div>
</div>
