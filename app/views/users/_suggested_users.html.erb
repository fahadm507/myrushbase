
  <div class= "row">
    <%@suggested_users.order(created_at: :desc).limit(10).each do |user| %>

      <%if !current_user.following?(user)%>

        <div class="basic_info span4">
          <ul class="">
            <div class="text">
              <%= image_tag user.avatar.url(:thumbnail), :class => "img-circle text-center"%>
            </div>
            <li><a class="user-name" href="/users/<%=user.id%>"><%= user.first_name %> <%=user.last_name %></a></li>
            <li class=""></li>
            <li><%=user.category.name%></li>
            <li><%= user.location%></li>

              <div class="followers">
                <%= form_for(current_user.relationships.build(followed_id: user.id)) do |f| %>
                <%= f.hidden_field :followed_id %>
                <%= f.submit "Follow", class: "btn btn-large btn-primary" %>
                <%end%>
              </div>

          </ul>
        </div>
      <%end%>
    <%end%>
  </div>


